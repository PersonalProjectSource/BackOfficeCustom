{% extends 'AppAdminBundle:Layout:admin.html.twig' %}
{% form_theme form 'AppAdminBundle:Form:fields-tabs.html.twig' %}

{% block body %}
    <div class="row">
        {{ form_start(form) }}
        <div class="col-lg-2">
            <section class="panel">
                <ul class="nav nav-pills nav-stacked nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#infos">
                            <i class="fa fa-user"></i> Informations
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#price">
                            <i class="fa fa-calendar"></i> Prix
                        </a>
                    </li>
                    <li>
                        <a data-toggle="tab" href="#image">
                            <i class="fa fa-edit"></i> Images
                        </a>
                    </li>
                </ul>
            </section>
        </div>

        <div class="tab-content">
            <div id="infos" class="col-lg-10 tab-pane active">
                <section class="panel">
                    <header class="panel-heading">
                        Informations
                    </header>
                    <div class="panel-body">
                        {{ form_row(form.name) }}
                        {{ form_row(form.reference) }}
                        {{ form_row(form.quantity) }}
                        {{ form_row(form.state) }}
                        {{ form_row(form.category) }}
                        {{ form_row(form.supplier) }}
                        <input class="media-btn" type="button" name="media_list_btn" value="liste des medias">
                        <input class="add-media-btn" type="button" name="add_media_btn" value="ajouter un média">
                    </div>
                </section>
            </div>

            <div id="price" class="col-lg-10 tab-pane">
                <section class="panel">
                    <header class="panel-heading">
                        Prix
                    </header>
                    <div class="panel-body">
                        {{ form(form.price) }}
                    </div>
                </section>
            </div>

            <div id="image" class="col-lg-10 tab-pane">
                <section class="panel">
                    <header class="panel-heading">
                        Images
                    </header>
                    <div class="panel-body">
                        {{ form_row(form.media) }}
                    </div>
                </section>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    <div class="media-btn">
        <input type="button" name="media-btn" value="afficher la mediatheque"/>
        
    </div>

     <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background: #56b2d6;">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Mediathèque</h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppMediaBundle:Media:list')) }}
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-danger" type="button">Annuler</button>
                    <button class="btn btn-info" type="button"> Selectionner</button>
                </div>
            </div>
        </div>
    </div>

     <div class="modal fade" id="addMyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background: #56b2d6;">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Ajouter un media</h4>
                </div>
                <div class="modal-body">
                    {{ render(controller('AppMediaBundle:Media:addMediaFromUpdate')) }}
                </div>
                <div class="modal-footer">
                    <button data-dismiss="modal" class="btn btn-danger" type="button">Annuler</button>
                    <button id="media_selection_btn" class="btn btn-info" type="button"> Selectionner</button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
            $( "#app_ecommercebundle_product_form_product_media" ).autocomplete({
                minLength: 2,
                source: '{{  path('media_ajax',{'type':'image'}) }}'
            })
            .data("ui-autocomplete")._renderItem = function (ul, item) {
                    return $("<li></li>").data("item.autocomplete", item).append(
                                    item.img + ' ' + item.label)
                            .appendTo(ul.addClass('list-row'));

            };

    </script>

    <script>
    $('.media-btn').on('click', function (e) {
        confirmboxmedialist();
    });

    $('.add-media-btn').on('click', function (e) {
        confirmboxaddmedia();
    });

    $('#media_selection_btn').on('click', function (e) {
        
        
        //confirmboxaddmedia();
        sendMediaToProductForAjax(1);

    });

    


